<%- include("header") %>
<div class="container-md my-4">
  <form action="/addbook" enctype="multipart/form-data" method="post">
    <div class="form-group">
      <label for="title">Book Title</label>
      <input
        name="title"
        value="<%= title %>"
        required
        type="text"
        class="form-control"
        id="titel"
      />
    </div>
    <div class="form-group form-row">
      <div class="col-6 col-sm-4">
        <label for="price">Price</label>
        <input
          name="price"
          value="<%= price %>"
          required
          type="number"
          class="form-control"
          id="price"
        />
      </div>
      <div class="col-6 col-sm-4">
        <label for="discount">Discount</label>
        <input
          name="discount"
          value="<%= discount %>"
          type="number"
          class="form-control"
          id="discount"
        />
      </div>
      <div class="col-sm-4">
        <label for="category">Category</label>
        <select name="category" required class="custom-select">
          <option value="" disabled selected>Category</option>
          <% categories.forEach((category)=>{ %>
          <option value="<%= category.name %>"><%= category.name %></option>
          <% }) %>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label for="description">Short Description</label>
      <textarea
        name="description"
        required
        rows="10"
        id="description"
        class="form-control"
      >
<%= description %></textarea
      >
    </div>
    <div class="form-group">
      <label for="featured">Featured Image</label>
      <div class="custom-file">
        <input
          type="file"
          name="featuredImage"
          required
          class="custom-file-input"
          id="featured"
        />
        <label class="custom-file-label" for="customFile">Choose file</label>
      </div>
      <small class="text-danger"><%= imgErr %></small>
    </div>
    <button type="submit" class="btn btn-info">Submit</button>
  </form>
  <form action="/createCategory" class="mt-3 row" method="post">
    <div class="col-sm-6">
      <label for="createCat">Create new category</label>
      <div class="input-group">
        <input
          id="createCat"
          name="createCat"
          type="text"
          class="form-control"
          placeholder="Create a new category"
        />
        <div class="input-group-append">
          <button
            type="submit"
            class="input-group-text bg-info text-white"
            id="basic-addon2"
          >
            Create
          </button>
        </div>
      </div>
      <small class="text-danger"><%= categoryErr %></small>
    </div>
  </form>
</div>

<%- include("footer") %>
